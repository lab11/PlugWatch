<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wit_energy_bluetooth"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gridwatch.plugwatch.wit.PlugWatchUIActivity"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/phone_id_text"
        android:layout_toEndOf="@+id/root_btn" />


    <TextView
        android:text="root_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/root_status"
        android:layout_alignTop="@+id/scan_btn"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/root_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:contextClickable="false" />

    <TextView
        android:text="Number GridWatch:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_above="@+id/root_btn"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView9" />

    <TextView
        android:text="Num Wit:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_above="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView9" />

    <Button
        android:text="Scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scan_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:layout_alignBaseline="@+id/scan_btn"
        android:layout_alignBottom="@+id/scan_btn"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Last Recieved:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView14"
        android:layout_alignEnd="@+id/dfasdf" />

    <TextView
        android:text="Total Network Data:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dfasdf"
        android:layout_above="@+id/textView5"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="version_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/root_status"
        android:layout_alignParentEnd="true"
        android:id="@+id/version_number" />

    <TextView
        android:text="-1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone_id_cur"
        android:visibility="visible"
        android:layout_alignTop="@+id/phone_id_text"
        android:layout_above="@+id/group_id_cur"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/phone_id_text" />

    <TextView
        android:text="phone id:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/phone_id_text"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/phone_id_text"
        android:layout_above="@+id/textView2"
        android:layout_alignEnd="@+id/root_btn" />

    <TextView
        android:text="-1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group_id_cur"
        android:visibility="visible"
        android:layout_below="@+id/phone_id_text"
        android:layout_alignBottom="@+id/group_id_text"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/phone_id_text" />

    <TextView
        android:text="group id:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/group_id_text"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/phone_id_text"
        android:layout_toStartOf="@+id/phone_id_text"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num_gw_text"
        android:layout_above="@+id/scan_btn"
        android:layout_toEndOf="@+id/textView14"
        android:layout_marginLeft="20dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seconds_since_last_text"
        android:textSize="10sp"
        android:layout_marginLeft="20dp"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView9" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num_packets_text"
        android:layout_marginLeft="20dp"
        android:layout_above="@+id/seconds_since_last_text"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_data_text"
        android:layout_marginLeft="20dp"
        android:layout_above="@+id/num_packets_text"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/group_id_text"
        android:layout_below="@+id/phone_id_text"
        android:layout_toStartOf="@+id/phone_id_cur" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="WhiteListMac"
        android:ems="10"
        android:id="@+id/mac_text"
        android:layout_above="@+id/test"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/mac_toggle"
        android:visibility="invisible" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mac_toggle"
        android:layout_alignBaseline="@+id/mac_text"
        android:layout_alignBottom="@+id/mac_text"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dfasdf"
        android:layout_alignParentStart="true"
        android:id="@+id/mac_address_display"
        android:layout_alignEnd="@+id/dfasdf" />

    <Button
        android:text="Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:layout_above="@+id/mac_address_display"
        android:layout_alignParentStart="true" />


</RelativeLayout>
